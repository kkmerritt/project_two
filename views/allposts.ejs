<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">ALL
                    <strong>POSTS</strong>
                </h2>
                <hr>
            </div>
            <% post.forEach(function (post, i) { %>
            <div class="col-lg-12 text-center">
                    <h4><%= post.date %></h4>
                </h2>
                  <h2><%= post.title %></h2>
                  <h5><%= post.id %> </h5>
                <p><%= post.content %></p>
                <h4> Post By: <b><font color= #C64044> <%= post.email %></font></b></h4><br>
                <% if (username) { %>

                <form action="/postdir/<%= post._id %>" method="get">
                      <input class="btn btn-default btn-md" type="submit" value="COMMENTS">
                </form>

              <%  } %>
                <hr>
            </div> <% }) %>

        </div>
    </div>

</div>
<!-- /.container -->
