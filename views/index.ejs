<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">ALL
                    <strong>POSTS</strong>
                </h2>
                <hr>
            </div>
            <% post.forEach(function (posts, i) { %>
            <div class="col-lg-12 text-center">
            <h2>  <%= posts.author %></h2><br>
                    <h4><%= posts.date %></h4>
                </h2>
                <p><%= posts.content %></p>
                <a href="#" class="btn btn-default btn-lg">Comments</a>
                <hr>
            </div> <% }) %>
            <div class="col-lg-12 text-center">
                <ul class="pager">
                    <li class="previous"><a href="#">&larr; Older</a>
                    </li>
                    <li class="next"><a href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>
<!-- /.container -->
