    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">USER
                    <strong>SIGN IN</strong>
                </h2>
                <hr>
                <form role="form" action="/userdir/signin" method="post">
