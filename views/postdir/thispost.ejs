
<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">THIS
          <strong>POST</strong>
          <h4><%= post.date %></h4>
        </h2>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <h4> Post By: <b><font color= #C64044> <%= post.email %></font></b></h4><br>
        <hr> <h3>COMMENTS</h3>

        <% post.comment.forEach(function (comment, i) { %>
          <div class="col-lg-12 text-center">
            <p> <%= comment %> </p>
            <h4> Post By: <b><font color= #C64044> "<%= post.email %>" </font></b></h4><br>
          </div> <% }) %>

          <form action="/postdir/<%= post._id %>/comment" method="post" role="form">
            <div class="row">

              <div class="form-group col-lg-12">
                <label>Comment</label>
                <textarea class="form-control" rows="6" name=post[comment] placeholder="Comment"></textarea>
              </div>


              <div class="form-group col-lg-12">
                <input type="hidden" name="save" value="submit">
                <button type="submit" class="btn btn-default">Submit Comment</button>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container -->
