  <!-- NOTE: SUBMIT POST -->
  <div class="container">

      <div class="row">
          <div class="box">
              <div class="col-lg-12">
                  <hr>
                  <h2 class="intro-text text-center">NEW
                      <strong>POST</strong>
                  </h2>
                  <hr>
                  <p>This is the section where we submit a new post. please fill out a new post below. it will be entered into the forumDB.</p>
                  <form action="/index" method="post" role="form">
                      <div class="row">
                          <div class="form-group col-lg-4">
                              <label>Post Author</label>
                              <input type="text" class="form-control" name=post[author] placeholder="author">
                          </div>

                          <div class="clearfix"></div>
                          <div class="form-group col-lg-12">
                              <label>Post</label>
                              <textarea class="form-control" rows="6" name=post[content] placeholder="post"></textarea>
                          </div>
                          <div class="form-group col-lg-12">
                              <input type="hidden" name="save" value="contact">
                              <button type="submit" class="btn btn-default">Submit</button>
                          </div>
                      </div>
                  </form>
              </div>
          </div>
      </div>

  </div>
  <!-- /.container -->
