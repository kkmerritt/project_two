<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">NEW
          <strong>POST</strong>
        </h2>
        <hr>
        <form action="/submitpost" method="post" role="form">
          <div class="row">
            <div class="form-group col-lg-4">
              <label>  <h2 class="intro-text text-center"><strong>email</strong></h2></label>
              <input type="text" class="form-control" name="post[email]" value='<%= username %>' placeholder="<%= username %>" readonly>
            </div>
            <div class="form-group col-lg-4">
              <label>  <h2 class="intro-text text-center"><strong>post title</strong></h2></label>
              <input type="text" class="form-control" name=post[title] placeholder="Title">
            </div>
            <div class="form-group col-lg-4">
              <label>  <h2 class="intro-text text-center"><strong>date</strong></h2></label>
              <script>
              var tD = new Date();
              var datestr = (tD.getMonth()+ 1) + "." + tD.getDate() + "." + tD.getFullYear();
              document.write("<input type='text' class='form-control' name=post[date] value='"+datestr+"'>");
              </script>
            </div>

            <div class="clearfix"></div>
            <div class="form-group col-lg-12">
              <label>  <h2 class="intro-text text-center"><strong>post</strong></h2></label>
              <textarea class="form-control" rows="6" name=post[content] placeholder="post"></textarea>
            </div>

            <div class="form-group col-lg-12">
              <button type="submit" class="btn btn-default">SUBMIT THIS POST</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
<!-- /.container -->
